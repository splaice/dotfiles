# darwin/osx specific
if [ -d /usr/local/Cellar/python/2.7.1/bin ] ; then
    PYBINPATH=/usr/local/Cellar/python/2.7.1/bin
elif [ -d /usr/local/Cellar/python/2.7/bin ] ; then
    echo "Warning: Why don't you have Python 2.7.1 installed? Using 2.7 for now."
    PYBINPATH=/usr/local/Cellar/python/2.7/bin
else
    PYBINPATH=""
fi

if [ -d /usr/local/Cellar/ruby/1.9.2-p0/bin ] ; then
    RBBINPATH=/usr/local/Cellar/ruby/1.9.2-p0/bin
else
    RBBINPATH=""
fi

export PATH=$PYBINPATH:$RBBINPATH:$PATH
export EDITOR=mvim
export VISUAL=mvim
export DISPLAY=:0.0
export CLICOLOR=1
export LSCOLORS=dxfxcxdxbxegedabagacad

alias ll="ls -hGlrt"
alias la="ls -hGlrta"
